import streamlit as st
import pandas as pd

def load_data(file_path="sensor_data.csv"):
    columns = ["heart_rate", "blood_pressure", "spO2", "temperature"]
    return pd.read_csv(file_path, names=columns)

st.title("Health Monitoring Dashboard")

data = load_data()
st.dataframe(data.tail())
st.line_chart(data[["heart_rate", "blood_pressure", "spO2", "temperature"]])
